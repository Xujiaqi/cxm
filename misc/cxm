# -*- mode: shell-script; sh-basic-offset: 8; indent-tabs-mode: t -*-
# ex: ts=8 sw=8 noet filetype=sh
#
# bash completion for cxm
# Copy this file in /etc/bash_completion.d/

have cxm &&
_cxm()
{
    local cur command

    COMPREPLY=()
    cur=${COMP_WORDS[$COMP_CWORD]}
    command=${COMP_WORDS[1]}

    case $COMP_CWORD in
        1)
            COMPREPLY=( $( compgen -W " console create destroy list infos check\
            migrate shutdown search activate fence eject loadbalance deactivate" -- $cur ) )
            ;;
        2)
            case $command in
                @(create|search|activate|console|deactivate|shutdown|destroy))
                    COMPREPLY=( $( compgen -W "$(ls -1 /etc/xen/vm/)" -- $cur ) )
                    ;;
                *)
                    ;;
            esac
            ;;
    esac
} &&
complete -F _cxm $default cxm

